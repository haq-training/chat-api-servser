{
    "compilerOptions": {
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "allowJs": true,
        "module": "commonjs",
        "target": "ES6",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
